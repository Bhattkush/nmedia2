    <style>
        .whatsapp-popup {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #25D366;
            color: white;
            border-radius: 40%;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            cursor: pointer;
        }

            .whatsapp-popup i {
                font-size: 24px;
            }

            .whatsapp-popup:hover {
                background-color: #20b958;
            }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector('.whatsapp-popup').onclick = function () {
                var message = "I am keen to learn more about your products and services. Could you provide me with some additional information?";
                var encodedMessage = encodeURIComponent(message);
                var url = "";

                if (/Android/i.test(navigator.userAgent)) {
                    url = "whatsapp://send?phone=9998332077&text=" + encodedMessage;
                } else {
                    url = "https://web.whatsapp.com/send?phone=9998332077&text=" + encodedMessage;
                }

                window.open(url, '_blank');
            };

            document.addEventListener('contextmenu', function (e) {
                e.preventDefault();
            });

            document.onkeydown = function (e) {
                if (e.keyCode === 123 || // F12
                    (e.ctrlKey && e.shiftKey && (e.keyCode === 73 || e.keyCode === 74)) || // Ctrl+Shift+I/J
                    (e.ctrlKey && e.keyCode === 85)) { // Ctrl+U
                    return false;
                }
            };
        });
    </script>
